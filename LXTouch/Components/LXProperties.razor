<div class="bg-dark">PROPERTIES</div>
<div class="p-2">
@if(Editor?.SelectedElement != null)
{
    <EditForm Model="Editor.SelectedElement">
        <div>
            <label class="form-label">Legend</label>
            <InputText class="form-control form-control-sm" @bind-Value="Editor.SelectedElement.Legend" />
        </div>
        <div>
            <label class="form-label">User Number</label>
            <InputNumber class="form-control  form-control-sm" @bind-Value="Editor.SelectedElement.UserNumber" />
        </div>
        <div class="form-group">
            <label class="form-label">Width (px)</label>
            <InputNumber class="form-control form-control-sm" @bind-Value="Editor.SelectedElement.Width" />
        </div>
        <div class="form-group">
            <label class="form-label">Height (px)</label>
            <InputNumber class="form-control  form-control-sm" @bind-Value="Editor.SelectedElement.Height" />
        </div>
    </EditForm>
    <button class="btn btn-secondary mt-2" @onclick="(()=> Editor.Remove(Editor.SelectedElement))">Remove</button>
}
else
{
    <span>No items selected</span> 
}
</div>



